#!/usr/bin/env ruby
require 'optparse'
require_relative '../current_sprint.rb'

options = {}
OptionParser.new do |opts|
  opts.banner = "Usage: sprint.rb [options]"

  opts.on("-a", "--all-columns", "Show all columns") do |a|
    options[:columns] = a
  end

  opts.on("-m", "--mine", "Show only issues assigned to me") do |m|
    options[:mine] = m
  end

  opts.on("-v", "--[no-]verbose", "Run verbosely") do |v|
    options[:verbose] = v
  end
end.parse!

print_current_sprint(options[:verbose], options[:columns], options[:mine])
